# Example Environment Configuration
# Copy this file to .env and customize for your environment

# Backend Configuration
SECRET_KEY=your-secret-key-change-in-production
DATABASE_URL=sqlite:///./data/demo_uploader.db
UPLOAD_DIR=/app/data

# Port Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# API Configuration
API_BASE_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000

# Authentication Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Configuration
MAX_FILE_SIZE_MB=10000
MAX_FILES=15
CHUNK_SIZE_MB=1

# Container Names (optional - will use defaults if not specified)
BACKEND_CONTAINER_NAME=demo-uppy-backend-dev
FRONTEND_CONTAINER_NAME=demo-uppy-frontend-dev
NETWORK_NAME=demo-uppy-dev-network

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80

# Demo Data Configuration
DEMO_ADMIN_EMAIL=admin@example.com
DEMO_ADMIN_NAME=System Administrator
DEMO_ADMIN_PASSWORD=temporary123
DEMO_USER_EMAIL=demo@example.com
DEMO_USER_NAME=Demo User
DEMO_USER_PASSWORD=temporary123

# Azure Storage Demo Configuration
DEMO_STORAGE_ACCOUNT_NAME=saName
DEMO_STORAGE_LOCATION=Central US 2
DEMO_CONTAINER=user-uploads