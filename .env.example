# Example Environment Configuration
# Copy this file to .env and customize for your environment

# Backend Configuration
SECRET_KEY=your-secret-key-change-in-production
DATABASE_URL=sqlite:///./data/demo_uploader.db
UPLOAD_DIR=/app/data

# Port Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# API Configuration
API_BASE_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000

# Authentication Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Configuration
MAX_FILE_SIZE_MB=10000
MAX_FILES=15
CHUNK_SIZE_MB=1

# Container Names (optional - will use defaults if not specified)
BACKEND_CONTAINER_NAME=demo-uppy-backend-dev
FRONTEND_CONTAINER_NAME=demo-uppy-frontend-dev
NETWORK_NAME=demo-uppy-dev-network
